<h1 class="sign-up-title">회원가입</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign-up-form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "email" %><br />
    <%= f.email_field :email, autofocus: true, class: "email-input", placeholder: "이메일 입력..." %>
  </div>

  <div class="field">
    <%= f.label :password, class: "password" %>
    <% if @minimum_password_length %>
      <em>(최소 <%= @minimum_password_length %> 자리 이상으로)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "password-input", placeholder: "비밀번호 입력..." %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "password-confirmation"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "password-confirmation-input", placeholder: "비밀번호 확인..." %>
  </div>

  <div class="actions">
    <%= f.submit "등록하기", class: "sign-up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
